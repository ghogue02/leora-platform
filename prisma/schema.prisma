// NOTIFICATIONS
// ============================================================================

model Notification {
  id                String   @id @default(cuid())
  tenantId          String
  tenant            Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  portalUserId      String
  portalUser        PortalUser @relation(fields: [portalUserId], references: [id], onDelete: Cascade)

